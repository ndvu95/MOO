<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="450dp"
    android:layout_height="600dp"
    android:background="@drawable/dialog"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/tvThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="360dp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:background="@drawable/dialog"
        android:textSize="45sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Đổi Mật Khẩu"
        android:textColor="#faf9f9"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Thay mật khẩu cho tài khoản MOO."
        android:textColor="#faf9f9"
        android:textSize="16sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_margin="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="8dp">

        <EditText
            android:id="@+id/edtMKHT"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu Hiện Tại"
            android:textColorHint="#fffefe"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp">

        <EditText
            android:id="@+id/edtMKM"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="#fff2f2"
            android:hint="Mật Khẩu Mới"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp">

        <EditText
            android:id="@+id/edtNLMK"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColorHint="#fff6f6"
            android:hint="Nhập Lại Mật Khẩu"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>
    <Button

        android:id="@+id/btnXacNhan"
        android:layout_margin="15dp"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Xác nhận"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
</LinearLayout>